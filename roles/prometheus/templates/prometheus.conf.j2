global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ node_exporter }}:9100', 'localhost:9100']

  - job_name: 'mysql_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
        - '{{ mysql_exporter }}:9104'

  - job_name: 'rabbitmq_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
        - '{{ rabbitmq_exporter }}:9105'
  
  - job_name: 'docker_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
        - '{{ docker_exporter }}:9323'

rule_files:
  - alert.rules.yml

